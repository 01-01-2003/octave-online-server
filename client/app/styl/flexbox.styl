@require("mixins.styl")

#flexbox {
	display: flex
	flex-flow: column nowrap
	
	position: absolute
	top: 0
	right: 0
	bottom: 0
	left: 0
	
	& > header {
		flex: 0 0 header_height
	}
	
	& > section {
		flex: 1 1 100%
		display: flex
		flex-flow: row nowrap
		padding-top: gutter_size
		padding-bottom: gutter_size
		background-color: color3
	
		& > #files_container {
			flex: 1 1 10px
			overflow: auto
			margin-right: gutter_size
			background-color: colorbkg
		}
		
		& > #open_container {
			flex: 1 1 200px
			overflow: auto
			margin-right: gutter_size
			background-color: colorbkg
		}
		
		& > #workspace_panel {
			flex: 0 1 75px
			overflow: auto
			margin-right: gutter_size
			background-color: colorbkg

			@media (max-width: 500px) {
				display: none
			}
		}
		
		& > #output_panel {
			flex: 1 1 400px
			overflow: none
			display: flex
			flex-flow: column nowrap
			
			#plot_container {
				flex: 1 1 300px
				overflow: none
				margin-bottom: gutter_size
				display: flex
				
				#plot_figure_container{
					flex: 2 1 80%
					overflow: none
					margin-right: gutter_size
					background-color: colorbkg
				}
				
				#plot_controls_container{
					flex: 1 1 20%
					overflow: auto
					background-color: colorbkg
				}
			}
			
			#console_container {
				flex: 4 1 300px
				overflow: none
				position: relative
				background-color: colorbkg
			}
			
			#plot_opener {
				position: absolute
			}
		}
		
		& > #main_menu {
			flex: 0 0 220px
			margin-left: gutter_size
			background-color: colorbkg
		}
		
		& > * {
			position: relative
		}
	}
}

